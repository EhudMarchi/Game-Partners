<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/post_card"
    android:layout_marginBottom="15dp">

    <RelativeLayout
        android:id="@+id/relativeLayoutUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:paddingRight="15dp"
        android:paddingLeft="5dp"
        android:background="@drawable/dialog"
>  <androidx.cardview.widget.CardView
        android:id="@+id/imgView_profilePicOut"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/imgView_profilePic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:srcCompat="@drawable/default_user" />
    </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/imgView_profilePicOut"
            android:orientation="vertical">
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:text="User Name"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:text="Time Uploaded"
                android:textColor="@color/grey"
                android:textSize="11sp"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_alignParentRight="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="right"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/locationIcon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="3dp"
                    app:srcCompat="@drawable/location"
                    android:layout_toLeftOf="@id/city"/>
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:text="City"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:layout_height="wrap_content"
                />

            </LinearLayout>
            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:text="location"
                android:textColor="@color/glowPink"
                android:alpha="0.9"
                android:textSize="11sp"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="11dp"
                android:gravity="right"/>


        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/subject"
        android:layout_width="wrap_content"
        android:text="Post Subject"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/postGame"
        android:fontFamily="sans-serif-medium"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/postGame"
        android:layout_width="wrap_content"
        android:text="Game"
        android:textColor="@color/glowCyan"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:layout_below="@id/relativeLayoutUser"
        android:fontFamily="sans-serif-medium"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_below="@id/subject"
        android:id="@+id/descriptionLayout"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:text="Game Description"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/imgView_postpicLayout"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_below="@id/descriptionLayout">
        <ImageView
            android:id="@+id/postBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gamepartners_background"
            android:scaleType="fitXY"
            android:translationZ="-2dp" />
        <TextView
            android:id="@+id/privatePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="right"
            android:padding="5dp"
            android:background="@drawable/post_card"
            android:drawableLeft="@drawable/private_post"
            android:text="Private"
            android:textColor="@color/glowPink"
            android:textSize="12sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/input"
            android:fontFamily="sans-serif-medium"
            android:gravity="right"
            android:padding="10dp"
            android:text="1.5 km"
            android:textColor="@color/darkPurple"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/timeOccurring"
            android:minWidth="36dp"
            android:minHeight="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:translationZ="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/dialog"
            android:fontFamily="sans-serif-medium"
            android:padding="10dp"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:foreground="@drawable/time" />
        <RelativeLayout
            android:id="@+id/circle_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/circle_white">

            <RelativeLayout
                android:id="@+id/imgUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/circle_border">

                <androidx.cardview.widget.CardView
                    android:id="@+id/myCardView"
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="@color/purple"
                    app:cardCornerRadius="150dp">

                    <ImageView
                        android:id="@+id/imgView_postpic"
                        android:layout_width="280dp"
                        android:layout_height="280dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        android:background="@drawable/default_game"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/platformsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:background="@drawable/dialog"
            android:padding="7dp">

            <ImageView
                android:id="@+id/realityIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/reality"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/pcIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/realityIcon"
                android:background="@drawable/pc"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/playstationIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@+id/pcIcon"
                android:background="@drawable/playstation"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/xboxIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@+id/playstationIcon"
                android:background="@drawable/xbox"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutPostInfo"
        android:layout_below="@id/imgView_postpicLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:srcCompat="@drawable/like"/>
            <TextView
                android:id="@+id/likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="1"
                android:textColor="@color/grey"
                android:textSize="13sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/comments"
            android:layout_width="wrap_content"
            android:textColor="@color/grey"
            android:textSize="13sp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1 comments"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/imgViewLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relativeLayoutPostInfo"
        android:alpha="0.3"
        android:layout_marginTop="5dp"
        android:background="@drawable/seperator"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/imgViewLine"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/like"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/like"/>
                <TextView
                    android:id="@+id/likeText"
                    android:layout_width="wrap_content"
                    android:text="Like"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/comment"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/comment"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Comment"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/join"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Join"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>