<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/post_card"
    android:layout_marginBottom="15dp">

    <RelativeLayout
        android:id="@+id/relativeLayoutUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:paddingRight="20dp"
        android:paddingLeft="5dp"
        android:background="@drawable/dialog"
>  <androidx.cardview.widget.CardView
        android:id="@+id/imgView_profilePicOut"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/imgView_profilePic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:srcCompat="@drawable/default_user" />
    </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imgView_profilePicOut"
            android:orientation="vertical">
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:text="User Name"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:fontFamily="sans-serif-medium"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:text="Time Uploaded"
                android:textColor="@color/grey"
                android:textSize="13sp"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/locationIcon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="3dp"
                    app:srcCompat="@drawable/location"
                    android:layout_toLeftOf="@id/city"/>
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:text="City"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:fontFamily="sans-serif-medium"
                android:layout_height="wrap_content"
                />

            </LinearLayout>
            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:text="location"
                android:textColor="@color/grey"
                android:textSize="13sp"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="10dp"/>


        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/subject"
        android:layout_width="wrap_content"
        android:text="Post Subject"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/postGame"
        android:fontFamily="sans-serif-medium"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/postGame"
        android:layout_width="wrap_content"
        android:text="Game"
        android:textColor="@color/glowCyan"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:layout_below="@id/relativeLayoutUser"
        android:fontFamily="sans-serif-medium"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_below="@id/subject"
        android:id="@+id/descriptionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:text="Game Description"
            android:gravity="left"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/imgView_postpicLayout"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_below="@id/descriptionLayout">
        <ImageView
            android:id="@+id/postBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gamepartners_background"
            android:translationZ="-2dp"
/>
        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:text="1.5 km"
            android:textColor="@color/darkPurple"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:background="@drawable/input"
            android:fontFamily="sans-serif-medium"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/circle_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/circle_white">
        <RelativeLayout
            android:id="@+id/imgUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/circle_border">
        <androidx.cardview.widget.CardView
            android:id="@+id/myCardView"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_margin="3dp"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/purple"
            app:cardCornerRadius="150dp"
            >
    <ImageView
        android:id="@+id/imgView_postpic"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:background="@drawable/default_game"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        android:scaleType="centerCrop"
        android:scaleX="1.4"
        android:scaleY="1.4"/>
        </androidx.cardview.widget.CardView>
</RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutPostInfo"
        android:layout_below="@id/imgView_postpicLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:srcCompat="@drawable/like"/>
            <TextView
                android:id="@+id/likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="15"
                android:textColor="@color/grey"
                android:textSize="13sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/comments"
            android:layout_width="wrap_content"
            android:textColor="@color/grey"
            android:textSize="13sp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="3 comments"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/imgViewLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relativeLayoutPostInfo"
        android:alpha="0.3"
        android:layout_marginTop="10dp"
        android:background="@drawable/seperator"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/imgViewLine"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/like"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Like"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/comment"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Comment"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/join"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Join"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>